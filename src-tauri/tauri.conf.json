{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Dictionary App",
  "version": "0.1.0",
  "identifier": "com.dictwin.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Dictionary App",
        "width": 600,
        "height": 500,
        "minWidth": 400,
        "minHeight": 300,
        "resizable": true,
        "center": true,
        "decorations": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [],
    "publisher": "DictWin"
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": [
        {
          "id": "input_translation",
          "accelerator": "CmdOrCtrl+Alt+A"
        },
        {
          "id": "select_translation",
          "accelerator": "CmdOrCtrl+Alt+D"
        },
        {
          "id": "screenshot_ocr",
          "accelerator": "CmdOrCtrl+Alt+S"
        },
        {
          "id": "silent_ocr",
          "accelerator": "CmdOrCtrl+Shift+Alt+S"
        }
      ]
    }
  }
}
