{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Dictionary App",
  "version": "0.1.0",
  "identifier": "com.dictwin.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Dictionary App",
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "center": true,
        "decorations": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "DictWin"
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": [
        {
          "id": "input_translation",
          "accelerator": "CmdOrCtrl+Alt+A"
        },
        {
          "id": "select_translation",
          "accelerator": "CmdOrCtrl+Alt+D"
        },
        {
          "id": "screenshot_ocr",
          "accelerator": "CmdOrCtrl+Alt+S"
        },
        {
          "id": "silent_ocr",
          "accelerator": "CmdOrCtrl+Shift+Alt+S"
        }
      ]
    }
  }
}
